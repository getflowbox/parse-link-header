{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "ES2022",
  },
  "files": ["lib/index.ts"],
}
